@model MyProject.Data.CustomerSuggestion

@{
	Layout = null;
	ViewBag.Title = "Suggestions";
	var culture = System.Threading.Thread.CurrentThread.CurrentUICulture.Name.ToLowerInvariant();
	bool RTL = CultureHelper.IsRighToLeft();
}
<!--Give Styling Here-->
@section IndexStyles {

}
<!-- Suggestions Section -->
<section class="container w-full dashboard-sections" id="suggestions">

	<form id="form_suggestions" class="mb-4" autocomplete="off">
		@Html.AntiForgeryToken()
		<!--Alert Message-->
		<div class="alert-div px-2"></div>

		<!--Alert Message End-->
		<div class="md:flex md:flex-wrap justify-between">

			<div class="form-group md:w-full flex flex-col my-3 md:my-2 px-2">
				<label for="Title" class="hidden">Title</label>
				<input type="text"
					   class="rounded-lg text-sm outline-none-input py-3 px-3 bg-white box-shadow-md form-field"
					   data-strict="1" name="Title" maxlength="100" autocomplete="off" data-required placeholder="Title">
				<small class="form-text-validation text-xss text-danger py-1"></small>
			</div>

			<div class="form-group md:w-full flex flex-col my-3 md:my-2 px-2">
				<label for="Suggestion" class="hidden">Suggestion</label>
				<textarea type="text"
						  class="rounded-lg text-sm outline-none-input py-3 px-3 bg-white box-shadow-md form-field"
						  data-strict="1" name="Suggestion" maxlength="4000" autocomplete="off" data-required placeholder="Suggestion" rows="8"></textarea>
				<small class="form-text-validation text-xss text-danger py-1"></small>
			</div>

		</div>
		<button class="flex flex-row justify-center rounded-lg bg-ak-gold/90 hover:bg-ak-gold focus:outline-none py-3 mt-4 mx-2 w-[97%] text-white" type="button" form="form_suggestions">
			<p class="p-btn-primary text-white mx-1 mt-0.5">Submit</p>
		</button>
	</form>

</section>
<!-- Suggestions Section End -->
<!--Write js Here-->
<script src="@Url.ContentVersioned("~/Assets/Admin/js/customer/suggestion/index.js")"></script>
