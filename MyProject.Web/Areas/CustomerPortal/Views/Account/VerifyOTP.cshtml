@model MyProject.Web.Areas.CustomerPortal.ViewModels.Account.CustomerVerifyOTPViewModel
@{
    ViewBag.Title = "Customer OTP Verification";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!--Give Styling Here-->
@section IndexStyles {

}
<!-- #region Content-->
<!-- BREADCRUMB AREA START -->
<div class="ltn__breadcrumb-area text-left bg-overlay-white-30 bg-image mt-5 mb-5" data-bs-bg="/Assets/img/bg/14.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="ltn__breadcrumb-inner">
                    <h1 class="page-title">Register</h1>
                    <div class="ltn__breadcrumb-list">
                        <ul>
                            <li><a href="~/home"><span class="ltn__secondary-color"><i class="fas fa-home"></i></span> Home</a></li>
                            <li><a href="~/customer/account/login">Account</a></li>
                            <li>OTP Verification</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- BREADCRUMB AREA END -->
<!-- PAGE AREA START -->
<div class="ltn__login-area pb-110">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title-area text-center">
                    <h1 class="section-title">OTP Verification</h1>
                    <p>
                        Please check your email (@Model.Email) for otp verification.
                    </p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6 offset-lg-3">
                <div class="account-login-inner">
                    <form class="ltn__form-box contact-form-box" id="form_otp_verification" data-submission="autosubmit">
                        @Html.AntiForgeryToken()
                        <input type="hidden" class="" name="PhoneCode" value="@Model.PhoneCode" />
                        <input type="hidden" class="" name="Contact" value="@Model.Contact" />

                        <input type="hidden" class="" name="Email" value="@Model.Email" />
                        <input type="hidden" class="" name="Username" value="@Model.UserName" />

                        <input type="hidden" class="" name="OTPExpired" value="@Model.OTPExpired" />
                        <input type="hidden" class="" name="OTP" value="" />
                        <input type="hidden" class="" name="AutoLogin" value="true" />

                        <div class="mb-2 flex justify-center digit-group d-flex flex-row justify-content-between">
                            <input data-strict="1" type="text" name=""
                                   class="form-field digits text-center mx-2"
                                   maxlength="1">
                            <input data-strict="1" type="text" name=""
                                   class="form-field digits text-center mx-2"
                                   maxlength="1">
                            <input data-strict="1" type="text" name=""
                                   class="form-field digits text-center mx-2"
                                   maxlength="1">
                            <input data-strict="1" type="text" name=""
                                   class="form-field digits text-center mx-2"
                                   maxlength="1">
                        </div>
                        <label class="d-flex flex-row justify-content-between">
                            Remaining Time:
                            <span class="timer">00:00</span>
                            <a class="resend-code" href="javascript:void(0);" style="display:none;">Resend OTP</a>
                        </label>
                        @*<label class="checkbox-inline">
            <input type="checkbox" value="">
            By clicking "create account", I consent to the privacy policy.
        </label>*@
                        <div class="btn-wrapper">
                            <button class="theme-btn-1 btn reverse-color btn-block" type="button" form="form_otp_verification">VERIFY</button>
                        </div>
                    </form>
                    <div class="by-agree text-center">
                        @*<p>By creating an account, you agree to our:</p>*@
                        <p>
                            <a href="~/customer/acount/signup">Sign Up</a>  &nbsp; &nbsp; | &nbsp; &nbsp;  <a href="~/customer/account/login">Login</a>
                        </p>
                        @*<div class="go-to-btn mt-50">
                                <a targe="_blank" href="~/customer/account/login">ALREADY have an Account ?</a>
                            </div>*@
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- PAGE AREA END -->
<!-- Main Section End -->
<!-- #endregion Content -->
<!--Write js Here-->
@section IndexScript {
    <script src="@Url.ContentVersioned("~/Assets/Admin/js/customer/account/verifyotp.js")"></script>
}