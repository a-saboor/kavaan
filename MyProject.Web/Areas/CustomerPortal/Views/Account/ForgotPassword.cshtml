@{
    ViewBag.Title = "Forgot Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- #region Content-->
<!-- BREADCRUMB AREA START -->
<div class="ltn__breadcrumb-area text-left bg-overlay-white-30 bg-image mt-5 mb-5" data-bs-bg="/Assets/img/bg/14.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="ltn__breadcrumb-inner">
                    <h1 class="page-title">Register</h1>
                    <div class="ltn__breadcrumb-list">
                        <ul>
                            <li><a href="~/home"><span class="ltn__secondary-color"><i class="fas fa-home"></i></span> Home</a></li>
                            <li><a href="~/customer/account/login">Account</a></li>
                            <li>Forgot Password</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- BREADCRUMB AREA END -->
<!-- PAGE AREA START -->
<div class="ltn__login-area pb-110">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title-area text-center">
                    <h1 class="section-title">Forgot Password</h1>
                    <p>
                        Enter your email for password recovery process.
                    </p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6 offset-lg-3">
                <div class="account-login-inner">
                    <form class="ltn__form-box contact-form-box" id="form_forgot_password">
                        @Html.AntiForgeryToken()

                        <div class="form-group">
                            <label for="Email" hidden>Email</label>
                            <small class="form-text-validation py-1 font-normal text-danger"></small>
                            <input class="form-field Email" data-strict="1" type="email" name="Email" placeholder="Email">
                        </div>

                        @*<label class="checkbox-inline">
                                <input type="checkbox" value="">
                                By clicking "create account", I consent to the privacy policy.
                            </label>*@
                        <div class="btn-wrapper">
                            <button class="theme-btn-1 btn reverse-color btn-block" type="button" form="form_forgot_password">Submit</button>
                        </div>
                    </form>
                    <div class="by-agree text-center">
                        @*<p>By creating an account, you agree to our:</p>*@
                        <p>
                            <a href="~/customer/acount/signup">Sign Up</a>  &nbsp; &nbsp; | &nbsp; &nbsp;  <a href="~/customer/account/login">Login</a>
                        </p>
                        @*<div class="go-to-btn mt-50">
                                <a targe="_blank" href="~/customer/account/login">ALREADY have an Account ?</a>
                            </div>*@
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- PAGE AREA END -->
<!-- Main Section End -->
<!-- #endregion Content -->
<!--Write js Here-->
@section IndexScript {
    <script src="@Url.ContentVersioned("~/Assets/Admin/js/customer/account/forgot-password.js")"></script>
}