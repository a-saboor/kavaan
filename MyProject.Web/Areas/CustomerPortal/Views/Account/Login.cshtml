@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!--Give Styling Here-->
@section IndexStyles {

}
<!-- #region Content-->
<!-- BREADCRUMB AREA START -->
<div class="ltn__breadcrumb-area text-left bg-overlay-white-30 bg-image mt-5 mb-5" data-bs-bg="/Assets/img/bg/14.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="ltn__breadcrumb-inner">
                    <h1 class="page-title">Login</h1>
                    <div class="ltn__breadcrumb-list">
                        <ul>
                            <li><a href="~/home"><span class="ltn__secondary-color"><i class="fas fa-home"></i></span> Home</a></li>
                            <li>Login</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- BREADCRUMB AREA END -->
<!-- LOGIN AREA START -->
<div class="ltn__login-area pb-65">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title-area text-center">
                    <h1 class="section-title">Sign In <br>To  Your Account</h1>
                    @*<p>
                        Lorem ipsum dolor, sit amet consectetur adipisicing elit. <br>
                        Sit aliquid,  Non distinctio vel iste.
                    </p>*@
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6">
                <div class="account-login-inner">
                    <form class="ltn__form-box contact-form-box" id="form_login">
                        @Html.AntiForgeryToken()

                        <input type="hidden" class="form-field" name="ReturnUrl" value="@TempData["ReturnUrl"]" />

                        <input type="hidden" class="form-field" name="PhoneCode" value="null" />
                        <input type="hidden" class="form-field" name="Contact" value="null" />

                        <div class="form-group">
                            <label for="Email" hidden>Email or Username</label>
                            <small class="form-text-validation py-1 font-normal text-danger"></small>
                            <input class="form-field" data-strict="1" type="text" name="Email" placeholder="Email or Username">
                        </div>

                        <div class="form-group">
                            <label for="Password" hidden>Password</label>
                            <small class="form-text-validation py-1 font-normal text-danger"></small>
                            <div class="d-flex">
                                <input class="form-field password s-p" data-strict="1" type="password" name="Password" placeholder="Password">
                                <span class="input-group-text cursor-pointer border-0 see-password" style="border-radius: 0px 0px 0px 0px; height: 65px;">
                                    <i class="fa fa-eye"></i>
                                </span>
                            </div>
                        </div>

                        <div class="btn-wrapper mt-0">
                            <button class="theme-btn-1 btn reverse-color btn-block" type="button" form="form_login">Sign In</button>
                        </div>
                        <div class="go-to-btn mt-20">
                            <a href="~/customer/account/forgotpassword" title="Forgot Password?"><small>Forgotten your Password?</small></a>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="account-create text-center pt-50">
                    <h4>Don't have an Account?</h4>
                    <p>
                        Add projects to your wishlist<br>
                        Get personalised recommendations
                    </p>
                    <div class="btn-wrapper">
                        <a href="~/customer/account/signup" class="theme-btn-1 btn black-btn">Create Account</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- LOGIN AREA END -->
<!-- Main Section End -->
<!-- #endregion Content -->
<!--Write js Here-->
@section IndexScript {
    <script src="@Url.ContentVersioned("~/Assets/Admin/js/customer/account/login.js")"></script>
}