@{
	ViewBag.Title = "Account Recovery";
	var culture = System.Threading.Thread.CurrentThread.CurrentUICulture.Name.ToLowerInvariant();
	bool RTL = CultureHelper.IsRighToLeft();
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<!--Give Styling Here-->
@section IndexStyles {

}
<!--Body Content-->
<div class="render-body" style="">
	<!-- Hero Section Start -->
	<section class="bg-gk-body max-w-screen-2xl 2xl:mx-auto">
		<div class="py-6">
			<div class="w-[80%] md:h-[250px] h-[150px] mx-auto bg-account-recovery-bg bg-cover rounded-lg xl:w-[80%] flex flex-col justify-center items-center">
				<h1 class="uppercase font-Rubik text-xl font-medium text-center text-white lg:text-4xl">Account Recovery</h1>
				<div class="flex items-center">
					<a href="/@culture/home/index" class="font-Rubik text-xs uppercase text-white">Home</a>
					<svg viewBox="0 0 192 512" class="w-1.5 mx-2 fill-current text-white flip-horizontal-rtl"><path fill="" d="M0 384.662V127.338c0-17.818 21.543-26.741 34.142-14.142l128.662 128.662c7.81 7.81 7.81 20.474 0 28.284L34.142 398.804C21.543 411.404 0 402.48 0 384.662z" class="fill-white"></path></svg>
					<p href="javascript:void(0);" class="font-Rubik text-xs uppercase text-white">Account Recovery</a>
				</div>
			</div>
		</div>
	</section>
	<!-- Hero Section End -->
	<!-- Email Menu Start -->
	<section class="bg-gk-body max-w-screen-2xl 2xl:mx-auto pb-10">
		<div class="w-[80%] mx-auto xl:w-[80%] text-center pt-5 pb-10">
			<div class="mx-auto bg-black/10 md:w-[40%] rounded-lg">
				@if (ViewBag.ErrorMessage != null)
				{
					<div class="w-[90%] mx-auto main-div pt-4 pb-3">
						<h1 class="font-Rubik font-medium text-xl">You Are Not Authorized</h1>
						<div>
							<!--Alert Message-->
							<div class="alert-div bg-gk-body">
								<div class="h-auto py-2 flex items-center rounded-lg bottom-10 left-8 alert-shadow-gold w-full my-3 overflow-auto">
									<img src="~/assets/images/web-icons/toastr-error.png" alt="" class="h-[30px] mx-2 alert-icon">
									<p class="font-Rubik text-sm alert-message pr-3 text-danger">@ViewBag.ErrorMessage</p>
								</div>
							</div>
							<!--Alert Message End-->
							<p class="font-Rubik text-center text-xs mt-4">Already have an account? <a href="javascript:void(0);" onclick="showRegisterSection()" class="font-bold text-gk-blue">Login</a> OR <a href="javascript:void(0);" onclick="showSignupSection()" class="font-bold text-gk-blue">make a new Account</a></p>
							<a href="/@culture/home">
								<button type="button" class="bg-gk-gold text-white font-medium w-full py-3 mt-4 font-Rubik text-xs rounded-lg mb-2 uppercase">Back to Home</button>
							</a>
						</div>
					</div>
				}
				else
				{
					<div class="w-[90%] mx-auto main-div pt-4 pb-3">
						<h1 class="font-Rubik font-medium text-xl">You Are Authorized</h1>
						<div>
							<!--Alert Message-->
							<div class="alert-div bg-gk-body">
								<div class="h-auto py-2 flex items-center rounded-lg bottom-10 left-8 alert-shadow-gold w-full my-3 overflow-auto">
									<img src="/assets/images/web-icons/toastr-success.png" alt="" class="h-[30px] mx-2 alert-icon">
									<p class="font-Rubik text-sm alert-message pr-3">@ViewBag.SuccessMessage</p>
								</div>
							</div>
							<!--Alert Message End-->
							@*<p class="font-Rubik text-center text-xs mt-4">Already have an account? <a href="javascript:void(0);" onclick="showRegisterSection()" class="font-bold text-gk-blue">Login</a> OR <a href="javascript:void(0);" onclick="showSignupSection()" class="font-bold text-gk-blue">make a new Account</a></p>*@
							<a href="/@culture/Customer/Dashboard/Index">
								<button type="button" class="bg-gk-gold text-white font-medium w-full py-3 mt-4 font-Rubik text-xs rounded-lg mb-2 uppercase">Go To Customer Portal</button>
							</a>
						</div>
					</div>
				}
			</div>
		</div>

		<div class="w-[80%] mx-auto bg-black/10 xl:w-[80%]">
			<div class="p-4 sm:flex sm:justify-between sm:items-start sm:w-[80%] sm:mx-auto sm:py-6">
				<div class="mb-4 sm:mb-0">
					<h1 class="font-Rubik text-xl font-medium uppercase">Feel free to contact us!</h1>
					<p class="font-Rubik text-xs">For any further queries, feel free to reach out to us.</p>
				</div>
				<div>
					<a href="/@culture/contact-us">
						<button class="font-Rubik text-xs font-medium flex items-center justify-center border-2 border-gk-gold rounded-lg px-4 py-3">
							CONTACT US
							<svg viewBox="0 0 512 512" class="w-3 ml-2"><path fill="currentColor" d="M487.8 24.1L387 .8c-14.7-3.4-29.8 4.2-35.8 18.1l-46.5 108.5c-5.5 12.7-1.8 27.7 8.9 36.5l53.9 44.1c-34 69.2-90.3 125.6-159.6 159.6l-44.1-53.9c-8.8-10.7-23.8-14.4-36.5-8.9L18.9 351.3C5 357.3-2.6 372.3.8 387L24 487.7C27.3 502 39.9 512 54.5 512 306.7 512 512 307.8 512 54.5c0-14.6-10-27.2-24.2-30.4zM55.1 480l-23-99.6 107.4-46 59.5 72.8c103.6-48.6 159.7-104.9 208.1-208.1l-72.8-59.5 46-107.4 99.6 23C479.7 289.7 289.6 479.7 55.1 480z" class=""></path></svg>
						</button>
					</a>
				</div>
			</div>
		</div>

	</section>
	<!-- Email Menu End -->
</div>
<!--Body Content End-->
<!--Write js Here-->
@section IndexScript {
	@*<script src="@Url.ContentVersioned("~/Assets/Admin/js/customer/account/reset-password.js")"></script>*@
}