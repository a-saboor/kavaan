@{
    ViewBag.Title = "Reset Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section IndexStyles {

}
<!-- #region Content-->
<!-- BREADCRUMB AREA START -->
<div class="ltn__breadcrumb-area text-left bg-overlay-white-30 bg-image mt-5 mb-5" data-bs-bg="/Assets/img/bg/14.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="ltn__breadcrumb-inner">
                    <h1 class="page-title">Reset Password</h1>
                    <div class="ltn__breadcrumb-list">
                        <ul>
                            <li><a href="~/home"><span class="ltn__secondary-color"><i class="fas fa-home"></i></span> Home</a></li>
                            <li><a href="~/customer/account/login">Account</a></li>
                            <li><a href="~/customer/account/forgotpassword">Forgot Password</a></li>
                            <li>Reset Password</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- BREADCRUMB AREA END -->
<!-- RESET AREA START -->
<div class="ltn__login-area pb-65">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title-area text-center">
                    <h1 class="section-title">Change Your <br>Account Password</h1>
                    @*<p>
                            Lorem ipsum dolor, sit amet consectetur adipisicing elit. <br>
                            Sit aliquid,  Non distinctio vel iste.
                        </p>*@
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6 offset-lg-3">
                <div class="account-login-inner">
                    <form class="ltn__form-box contact-form-box" id="form_reset_password">
                        @Html.AntiForgeryToken()

                        @if (ViewBag.ErrorMessage != null)
                        {
                            <div class="alert alert-danger" role="alert">
                                @ViewBag.ErrorMessage
                            </div>
                        }
                        else
                        {

                            <div class="form-group">
                                <label for="Password" hidden>New Password</label>
                                <small class="form-text-validation py-1 font-normal text-danger"></small>
                                <div class="d-flex">
                                    <input class="form-field password s-p" data-strict="1" type="password" name="NewPassword" placeholder="New Password">
                                    <span class="input-group-text cursor-pointer border-0 see-password" style="border-radius: 0px 0px 0px 0px; height: 65px;">
                                        <i class="fa fa-eye"></i>
                                    </span>
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="Password" hidden>Confirm Password</label>
                                <small class="form-text-validation py-1 font-normal text-danger"></small>

                                <div class="d-flex">
                                    <input class="form-field confirm-password s-p" data-strict="1" type="password" name="ConfirmPassword" placeholder="Confirm Password">
                                    <span class="input-group-text cursor-pointer border-0 see-password" style="border-radius: 0px 0px 0px 0px; height: 65px;">
                                        <i class="fa fa-eye"></i>
                                    </span>
                                </div>
                            </div>

                            <div class="btn-wrapper mt-0">
                                <button class="theme-btn-1 btn reverse-color btn-block" type="button" form="form_reset_password">Submit</button>
                            </div>
                        }

                    </form>
                    <div class="by-agree text-center">
                        <p>
                            <a href="~/customer/acount/signup">Sign Up</a>  &nbsp; &nbsp; | &nbsp; &nbsp;  <a href="~/customer/account/login">Login</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- RESET AREA END -->
<!-- #endregion Content -->
<!--Write js Here-->
@section IndexScript {
    <script src="@Url.ContentVersioned("~/Assets/Admin/js/customer/account/reset-password.js")"></script>
}