@{
    ViewBag.Title = "Signup";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!--Give Styling Here-->
@section IndexStyles {

}
<!-- #region Content-->
<!-- BREADCRUMB AREA START -->
<div class="ltn__breadcrumb-area text-left bg-overlay-white-30 bg-image mt-5 mb-5" data-bs-bg="/Assets/img/bg/14.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="ltn__breadcrumb-inner">
                    <h1 class="page-title">Register</h1>
                    <div class="ltn__breadcrumb-list">
                        <ul>
                            <li><a href="~/home"><span class="ltn__secondary-color"><i class="fas fa-home"></i></span> Home</a></li>
                            <li>Register</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- BREADCRUMB AREA END -->
<!-- PAGE AREA START -->
<div class="ltn__login-area pb-110">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title-area text-center">
                    <h1 class="section-title">Register <br>Your Account</h1>
                    @*<p>
                            Lorem ipsum dolor, sit amet consectetur adipisicing elit. <br>
                            Sit aliquid,  Non distinctio vel iste.
                        </p>*@
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6 offset-lg-3">
                <div class="account-login-inner">
                    <form class="ltn__form-box contact-form-box" id="form_signup">
                        @Html.AntiForgeryToken()

                        <input type="hidden" class="form-field" name="PhoneCode" value="null" />
                        <input type="hidden" class="form-field" name="Contact" value="null" />

                        <div class="form-group">
                            <label for="FirstName" hidden>First Name</label>
                            <small class="form-text-validation py-1 font-normal text-danger"></small>
                            <input class="form-field" data-strict="1" type="text" name="FirstName" placeholder="First Name" onkeypress="return isString(event)">
                        </div>
                        <div class="form-group">
                            <label for="LastName" hidden>Last Name</label>
                            <small class="form-text-validation py-1 font-normal text-danger"></small>
                            <input class="form-field" data-strict="1" type="text" name="LastName" placeholder="Last Name" onkeypress="return isString(event)">
                        </div>
                        <div class="form-group">
                            <label for="Email" hidden>Email</label>
                            <small class="form-text-validation py-1 font-normal text-danger"></small>
                            <input class="form-field Email" data-strict="1" type="email" name="Email" placeholder="Email">
                        </div>
                        <div class="form-group">
                            <label for="Password" hidden>Password</label>
                            <small class="form-text-validation py-1 font-normal text-danger"></small>

                            <div class="d-flex">
                                <input class="form-field password s-p" data-strict="1" type="password" name="Password" placeholder="Password">
                                <span class="input-group-text cursor-pointer border-0 see-password" style="border-radius: 0px 0px 0px 0px; height: 65px;">
                                    <i class="fa fa-eye"></i>
                                </span>
                            </div>

                        </div>
                        <div class="form-group">
                            <label for="Password" hidden>Confirm Password</label>
                            <small class="form-text-validation py-1 font-normal text-danger"></small>

                            <div class="d-flex">
                                <input class="form-field confirm-password s-p" data-strict="1" type="password" name="ConfirmPassword" placeholder="Confirm Password">
                                <span class="input-group-text cursor-pointer border-0 see-password" style="border-radius: 0px 0px 0px 0px; height: 65px;">
                                    <i class="fa fa-eye"></i>
                                </span>
                            </div>

                        </div>
                        @*<label class="checkbox-inline">
            <input type="checkbox" value="">
            I consent to Herboil processing my personal data in order to send personalized marketing material in accordance with the consent form and the privacy policy.
        </label>*@
                        @*<label class="checkbox-inline">
            <input type="checkbox" value="">
            By clicking "create account", I consent to the privacy policy.
        </label>*@
                        <div class="btn-wrapper">
                            <button class="theme-btn-1 btn reverse-color btn-block" type="button" form="form_signup">Create Account</button>
                        </div>
                    </form>
                    <div class="by-agree text-center">
                        <p>By creating an account, you agree to our:</p>
                        <p>
                            <a targe="_blank" href="~/terms-and-conditions">Terms & Conditions</a>  &nbsp; &nbsp; | &nbsp; &nbsp;  <a targe="_blank" href="~/privacy-policy">Privacy Policy</a>
                        </p>
                        <div class="go-to-btn mt-50">
                            <a targe="_blank" href="~/customer/account/login">Already have an Account ?</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- PAGE AREA END -->
<!-- #endregion Content -->
<!--Write js Here-->
@section IndexScript {
    <script src="@Url.ContentVersioned("~/Assets/Admin/js/customer/account/signup.js")"></script>
}