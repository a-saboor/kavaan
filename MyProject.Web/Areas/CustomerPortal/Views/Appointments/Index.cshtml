@{
	ViewBag.Title = @Resources.APPOINTMENTS;
	var culture = System.Threading.Thread.CurrentThread.CurrentUICulture.Name.ToLowerInvariant();
	bool RTL = CultureHelper.IsRighToLeft();
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<!--Give Styling Here-->
@section IndexStyles {
	<link href="https://unpkg.com/gijgo@1.9.13/css/gijgo.min.css" rel="stylesheet" type="text/css" />
	<style>
		#appointment_form span.input-group-append {
			display: none;
		}

		.appt-image-box-shadow {
			box-shadow: #dfaf69 -20px -20px 0px 0px;
		}
	</style>
}
<!--Body Content-->
<div class="render-body" style="">
	<!-- appointment Section Start -->
	<section class="bg-gk-body max-w-screen-2xl 2xl:mx-auto py-10">
		<div class="lg:flex lg:w-[80%] lg:mx-auto lg:py-10 xl:w-[80%]">
			<div class="w-[80%] mx-auto lg:w-[50%] lg:p-10">
				<img src="/assets/images/bg/appoitnment-image.png" class="rounded-lg appt-image-box-shadow" alt="">
			</div>
			<div class="w-[80%] mx-auto lg:w-[50%] lg:p-10 xl:my-auto">
				<h1 class="font-Rubik text-base font-medium pt-4 lg:text-xl">@Resources.SCHEDULE_AN_APPOINTMENT</h1>
				<a href="javascript: window.location = document.referrer;" class="inline-flex">
					<h1 class="font-Rubik text-xs text-gk-purple uppercase font-medium mb-2 flex">
						<svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 flip-horizontal-rtl" fill="none" viewBox="0 0 24 24"
							 stroke="currentColor">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
								  d="M15 19l-7-7 7-7" />
						</svg>
						@Resources.GO_BACK
					</h1>
				</a>
				<form class="" action="/@culture/Customer/Appointments/Index" id="appointment_form">
					@Html.AntiForgeryToken()
					<input type="hidden" class="input-field-hidden" name="TypeAr" value="type-ar" />
					<input type="hidden" class="input-field-hidden" name="AppointmentDate" value="" />
					<div class="alert-div"></div>
					<div>
						<div class="xl:flex xl:items-center xl:justify-between">
							<div class="my-2 relative xl:w-full xl:mr-2">
								<label for="" class="font-Rubik text-xs text-black/40">@Resources.SELECT_DATE</label>
								<input type="text" inputmode="numeric" name="Date" id="" placeholder="@Resources.SELECT" class="bg-black/10 w-full py-3 rounded-lg px-2 text-xs font-Rubik placeholder-black/40" autocomplete="off" readonly="">
								<span class="font-Rubik text-danger text-xs font-medium py-1"></span>
							</div>
							<div class="my-2 relative xl:w-full">
								<label for="" class="font-Rubik text-xs text-black/40">@Resources.SELECT_TIME</label>
								<input type="time" name="Time" id="" placeholder="@Resources.SELECT" class="bg-black/10 w-full py-3 rounded-lg px-2 text-xs font-Rubik placeholder-black/40" autocomplete="off">
								<span class="font-Rubik text-danger text-xs font-medium py-1"></span>
							</div>
						</div>
					</div>
					<div class="text-center">
						<div class="md:flex justify-between mt-6 lg:mt-0 type-div">
							<div class="my-2 flex items-center mr-2">
								<input type="radio" name="Type" id="VT" class="mr-1" value="Virtual Tour" data-ar-value="جولة افتراضية" checked="checked">
								<label class="font-Rubik text-sm font-medium" for="VT">@Resources.VIRTUAL_TOUR</label>
							</div>
							<div class="my-2 flex items-center mr-2">
								<input type="radio" name="Type" id="PST" class="mr-1" value="Physical site tour" data-ar-value="جولة ميدانية بالموقع">
								<label class="font-Rubik text-sm font-medium" for="PST">@Resources.PHYSICAL_SITE_TOUR</label>
							</div>
							<div class="my-2 flex items-center mr-2">
								<input type="radio" name="Type" id="M&B" class="mr-1" value="Meeting and booking" data-ar-value="الاجتماع والحجز">
								<label class="font-Rubik text-sm font-medium" for="M&B">@Resources.MEETING_AND_BOOKING</label>
							</div>
						</div>
						<span class="font-Rubik text-danger text-xs font-medium py-1"></span>
					</div>
					<div class="w-[100%] mx-auto py-4">
						<button type="submit" class="bg-gk-gold text-sm font-medium uppercase text-white w-full py-3 rounded-lg">
							@Resources.SUBMIT_REQUEST
						</button>
					</div>
				</form>
			</div>
		</div>
	</section>
	<!-- appointment Section End -->
</div>
<!--Body Content End-->
<!--Write js Here-->
@section IndexScript {
	<script src="https://unpkg.com/gijgo@1.9.13/js/gijgo.min.js" type="text/javascript"></script>
	<script src="@Url.ContentVersioned("~/Assets/Admin/js/customer/appointment/index.js")"></script>
}
