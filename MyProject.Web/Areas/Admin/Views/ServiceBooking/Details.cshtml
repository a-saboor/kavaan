        <!--end::Shape-->
        <!--begin::Invoice header-->
        <div class="bg-gold justify-content-center px-8 px-md-0 py-8 row">
            <div class="col-md-9">
                <div class="d-flex justify-content-between align-items-md-center flex-column flex-md-row">
                    <h1 class="display-3 font-weight-boldest text-white order-1 order-md-1">
                        @*@Model.Unit.Property.Title*@
                        <p class="font-size-h2">@*@Model.b*@</p>
                    </h1>
                    <div class="d-flex flex-column px-0 order-2 order-md-2 text-md-right">
                        <span class="d-flex flex-column font-size-h5 font-weight-bold text-white text-uppercase">
                            <span>@(Model.CreatedOn == DateTime.MinValue ? "-" : Model.CreatedOn.ToString(MyProject.Web.Helpers.CustomHelper.GetDateFormat))</span>
                        </span>
                        <!--begin::Logo-->
                        @*<a href="javascript:void(0);" class="mb-5 max-w-115px">
                                <span class="svg-icon svg-icon-full svg-logo-white">
                                    @Model.Unit.UnitNo
                                </span>
                            </a>*@
                        <!--end::Logo-->
                        <span class="d-flex flex-column font-size-h5 font-weight-bold text-white">
                            <span>@Model.BookingNo</span>
                            <span>@Model.Status</span>
                            <span>@*Mississippi 96522*@</span>
                        </span>
                    </div>
                </div>
            </div>
        </div>
        <!--end::Invoice header-->
        <div class="justify-content-center px-8 px-md-0 py-8 row">
            <div class="col-md-9">
                <!--begin::Invoice body-->
                <div class="row pt-5">
                    <div class="col-md-12">
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th class="pt-1 pb-9 pl-0 pl-md-5 font-weight-bolder text-muted font-size-lg text-uppercase">Customer</th>
                                        <th class="pt-1 pb-9 text-right font-weight-bolder text-muted font-size-lg text-uppercase">Address</th>
                                        @*<th class="pt-1 pb-9 text-right pr-0 font-weight-bolder text-muted font-size-lg text-uppercase">Amount</th>*@
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr class="font-weight-bolder border-bottom-0 font-size-lg">
                                        <td class="border-top-0 py-4 d-flex align-items-center">
                                            @*<span class="navi-icon mr-3">
                                                    <i class="fa fa-genderless text-success font-size-h2"></i>
                                                </span>*@
                                            @(!string.IsNullOrEmpty(Model.CustomerContact) ? Html.Raw("<br>" + Model.CustomerContact)  : Html.Raw(""))
                                            @(!string.IsNullOrEmpty(Model.CustomerEmail) ? Html.Raw("<br>" + Model.CustomerEmail)  : Html.Raw(""))
                                        </td>
                                        <td class="border-top-0 text-right py-4">
                                           
                                            @(!string.IsNullOrEmpty(Model.CustomerAddress) ? Html.Raw("<br>" + Model.CustomerAddress)  : Html.Raw(""))
                                        </td>
                                        @*<td class="border-top-0 pr-0 py-4 font-size-h6 font-weight-boldest text-right">$4800.00</td>*@
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <!--end::Invoice body-->
                <!--begin::Invoice footer-->
                <div class="row border-top">
                    <div class="col-md-6 pt-10 pb-10">
                        <div class="d-flex flex-column">
                            <div class="d-flex flex-column">
                                <div class="font-weight-bold font-size-h6 mb-3">Transaction Details</div>
                                @if (Transaction != null)
                                {
                                    <div class="d-flex justify-content-between font-size-lg mb-3">
                                        <span class="font-weight-bold mr-15">Date:</span>
                                        <span class="text-right text-uppercase">@(Transaction.CreatedOn.HasValue ? Transaction.CreatedOn.Value.ToString(MyProject.Web.Helpers.CustomHelper.GetDateFormat) : "-")</span>
                                    </div>
                                    <div class="d-flex justify-content-between font-size-lg mb-3">
                                        <span class="font-weight-bold mr-15">Reference #:</span>
                                        <span class="text-right">@Transaction.InvoiceCode</span>
                                    </div>
                                    <div class="d-flex justify-content-between font-size-lg mb-3">
                                        <span class="font-weight-bold mr-15">Name:</span>
                                        <span class="text-right">@Transaction.NameOnCard</span>
                                    </div>
                                    <div class="d-flex justify-content-between font-size-lg mb-3">
                                        <span class="font-weight-bold mr-15">Mask Card# :</span>
                                        <span class="text-right">@Transaction.MaskCardNo</span>
                                    </div>
                                    <div class="d-flex justify-content-between font-size-lg mb-3">
                                        <span class="font-weight-bold mr-15">Status:</span>
                                        <span class="text-right">@Transaction.TransactionStatus</span>
                                    </div>
                                    <div class="d-flex justify-content-between font-size-lg">
                                        <span class="font-weight-bold mr-15">Amount :</span>
                                        <span class="text-right">AED @Transaction.Amount</span>
                                    </div>
                                }

                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 align-self-center">
                        <div class="bg-gold rounded d-flex align-items-center justify-content-between text-white max-w-350px position-relative mx-auto mr-md-0 ml-md-auto p-7">
                            <!--begin::Shape-->
                            <div class="position-absolute opacity-30 top-0 right-0">
                                <span class="svg-icon svg-icon-2x svg-logo-white svg-icon-flip">
                                    <!--begin::Svg Icon | path:/metronic/theme/html/demo2/dist/assets/media/svg/shapes/abstract-8.svg-->
                                    <svg xmlns="http://www.w3.org/2000/svg" width="176" height="165" viewBox="0 0 176 165" fill="none">
                                        <g clip-path="url(#clip0)">
                                            <path d="M-10.001 135.168C-10.001 151.643 3.87924 165.001 20.9985 165.001C38.1196 165.001 51.998 151.643 51.998 135.168C51.998 118.691 38.1196 105.335 20.9985 105.335C3.87924 105.335 -10.001 118.691 -10.001 135.168Z" fill="#AD84FF"></path>
