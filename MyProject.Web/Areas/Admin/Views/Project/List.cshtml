                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Name</th>
                            <th>Project Type</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody style="display:none">
                        @if (Model.Any() & Model != null)
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>@(item.CreatedOn.HasValue ? item.CreatedOn.Value.ToString(MyProject.Web.Helpers.CustomHelper.GetDateFormat) : "-")</td>
                                    <td>@item.Thumbnail|@item.Name</td>
                                    <td>@(item.ProjectType != null ? item.ProjectType.Name : "-")</td>
                                    <td>@(item.IsActive.HasValue ? item.IsActive.Value : false)</td>
                                    <td nowrap="nowrap">@item.IsActive,@item.ID</td>
                                </tr>
                            }
