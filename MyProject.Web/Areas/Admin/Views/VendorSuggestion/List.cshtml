@model IEnumerable<Project.Data.VendorSuggestion>


@{
    ViewBag.Title = "List";
    Layout = null;
}


<style>
    .see-more-data {
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        width: 30vw;
        cursor: pointer;
    }

    .see-more-data-show {
        overflow: visible;
        white-space: normal;
    }

    /*
        tr.docked .seemore {
            overflow: visible;
            white-space: normal;
            cursor: pointer;
        }

            tr.docked .seemore .fa-thumbtack {
                display: block;
                background: #6993ff;
                padding: 5px 6.7px;
                border-radius: 50%;
                color: #2d2d2d;
            }
    */
    i.fa-thumbtack {
        position: relative;
        right: 0px;
        background: #bc93597d;
        transform: rotate(45deg);
        padding: 5px 6.7px;
        border-radius: 50%;
        color: #fff;
        cursor: pointer;
    }

        i.fa-thumbtack.pin {
            background: #bc9359;
            transform: rotate(0deg);
        }
    /*
            .fa-thumbtack:hover {
                box-shadow: 3px 3px 5px #000000b3;
            }*/
</style>
<!--begin::Row-->
<div class="row">
    <div class="col-xl-12">
        <!--begin::Card-->
        <div class="card card-custom gutter-b">
            <div class="card-header flex-wrap border-0 pt-6 pb-0">
                <div class="card-title">
                    <h3 class="card-label">
                        Vendor Suggestions
                    </h3>
                </div>
                <div class="card-toolbar">
                    <!--begin::Dropdown-->
                    @*<div class="dropdown dropdown-inline mr-2">
                            <a href="~/Assets/AppFiles/Documents/CSVSample/BulkCountry.xlsx" download type="button" class="btn btn-dark btn-sm">
                                <i class="fa fa-download"></i>
                                Sample CSV
                            </a>
                        </div>

                        <div class="dropdown dropdown-inline mr-2">
                            <button type="button" class="btn btn-dark btn-sm" onclick="OpenModelPopup(this, '/Admin/Country/BulkUpload')" data="/Admin/Country/BulkUpload">
                                <i class="fa fa-plus"></i>
                                Bulk Upload
                            </button>
                        </div>*@
                    <!--end::Dropdown-->
                    <!--begin::Button-->
                    <!--end::Button-->
                </div>
            </div>

            <div class="card-body">
                @Html.AntiForgeryToken()
                <!--begin: Datatable-->
                <table class="table table-separate table-head-custom table-checkable" id="kt_datatable1">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Email</th>
                            <th>Message</th>
                            <th>Pin</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@(item.CreatedOn.HasValue ? item.CreatedOn.Value.ToString("dd MMM yyyy, h:mm tt") : "-")	</td>
                                <td>@(item.Vendor != null ? item.Vendor.Email : "-")</td>
                                <td>
                                    <div class="see-more-data">
                                        @(item.Vendor != null ? item.Suggestion : "-")
                                    </div>
                                </td>
                                <td>
                                    <span class="see-more">
                                        <i class="fa fa-thumbtack" area="show"></i>
                                    </span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <!--end: Datatable-->
            </div>
        </div>
        <!--end::Card-->
    </div>
</div>
<!--end::Row-->
