@model IEnumerable<Project.Data.VendorTransactionHistory>

@{
    ViewBag.Title = "List";
    Layout = null;
}
<style>
    #kt_datatable1 tbody tr td:last-child {
        white-space: nowrap;
    }
</style>

<!--begin::Row-->
<div class="row">
    <div class="col-xl-12">
        <!--begin::Card-->
        <div class="card card-custom gutter-b">
            <div class="card-header flex-wrap border-0 pt-6 pb-0">
                <div class="card-title">
                    <h3 class="card-label">
                        Vendor Transaction
                        <span class="d-block text-muted pt-2 font-size-sm">Manage Transaction  Here...</span>
                        <span>
                            <h4 class="mt-4 card-label">
                                @ViewBag.VendorName
                            </h4>
                        </span>
                    </h3>

                </div>


            </div>
            <div class="card-body">
                @Html.AntiForgeryToken()
                <!--begin: Datatable-->
                <table class="table table-separate table-head-custom table-checkable" id="kt_datatable1">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Package</th>
                            <th>Price</th>
                            <th>Adjustement</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody style="display:none">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@(item.Date.HasValue ? item.Date.Value.ToString("dd MMM yyyy, h:mm tt") : "-")	</td>
                                <td>@(item.VendorPackage != null ?  item.VendorPackage.Name : "-")</td>
                                <td>@item.Price</td>
                                <td>@item.Adjustment</td>
                                <td>@item.Status</td>
                            </tr>
                        }
                    </tbody>
                </table>
                <!--end: Datatable-->
            </div>
        </div>
        <!--end::Card-->
    </div>
</div>
<!--end::Row-->
