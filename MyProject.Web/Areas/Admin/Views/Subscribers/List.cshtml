@model IEnumerable<MyProject.Data.Subscriber>

@{
	ViewBag.Title = "List";
	Layout = null;
}
<style>
	#kt_datatable1 tbody tr td:last-child {
		white-space: nowrap;
	}
</style>
<!--begin::Row-->
<div class="row">
	<div class="col-xl-12">
		<!--begin::Card-->
		<div class="card card-custom gutter-b">
			<div class="card-header flex-wrap border-0 pt-6 pb-0">
				<div class="card-title">
					<h3 class="card-label">
						Subscribers
						<span class="d-block text-muted pt-2 font-size-sm">Manage Subscribers Here...</span>
					</h3>
				</div>
                <div class="card-toolbar">
                    <div class="dropdown dropdown-inline mr-2">
                        <button type="button" class="btn btn-custom " onclick="OpenModelPopup(this, '/Admin/Subscribers/SendEmailToSubscribers')" data="/Admin/Subscribers/SendEmailToSubscribers">
                            <i class="fa fa-envelope text-white"></i>
                            Send Email
                        </button>
                    </div>
                    <!--begin::Dropdown-->
                    @*<div class="dropdown dropdown-inline mr-2">
                        @using (Html.BeginForm("SubscribersReport", "Subscribers", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            <input type="text" value="" id="from" name="FromDate" class="form-control kt_datepicker_range" hidden />
                            <input type="text" value="" id="to" name="ToDate" class="form-control kt_datepicker_range" hidden />
                            <button type="submit" id="btnSubmit" class="btn btn-dark btn-sm" @(Model.Count() > 0 ? "" : "disabled")>
                                <i class="far fa-file-excel"></i>
                                Export Excel
                            </button>
                        }
                    </div>*@
                    <!--end::Dropdown-->
                   
                </div>
			</div>
			<div class="card-body">
				@Html.AntiForgeryToken()
				<!--begin: Datatable-->
				<table class="table table-separate table-head-custom table-checkable" id="kt_datatable1">
					<thead>
						<tr>
							<th hidden>ID</th>
							<th>Date</th>
							<th>Email</th>
						</tr>
					</thead>
					@*<tbody style="display:none">
					*@
					<tbody>
						@foreach (var item in Model)
						{
							<tr>
								<td hidden>@item.ID</td>
								<td>@(item.CreatedOn.HasValue ? item.CreatedOn.Value.ToString(MyProject.Web.Helpers.CustomHelper.GetDateFormat) : "-")	</td>
								<td>@item.Email</td>
							</tr>
						}
					</tbody>
				</table>
				<!--end: Datatable-->
			</div>
		</div>
		<!--end::Card-->
	</div>
</div>
<!--end::Row-->
