@model MyProject.Data.UnitBooking
@{
    Layout = null;
}
<div class="modal-header">
    <h5 class="modal-title">Change Booking Status</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <i aria-hidden="true" class="ki ki-close"></i>
    </button>
</div>
<div class="modal-body">
    @using (Html.BeginForm("ChangeStatus", "UnitBooking", new { area = "Admin" }, FormMethod.Post, new { id = "frm-edit", @class = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.ID)
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <div class="form-group">
                    @Html.LabelFor(model => model.BookingStatus, "Status", htmlAttributes: new { @class = "control-label" })
                    <div class="input-group mb-2">
                        <select class="form-control" name="BookingStatus">
                            @if (ViewBag.BookingStatus != null)
                            {
                                foreach (var item in ViewBag.BookingStatus)
                                {
                                    <option value="@item">@item</option>
                                }
                            }
                        </select>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
    <button type="submit" class="btn btn-custom" form="frm-edit">Submit</button>
</div>
<script>
    $('select[name="BookingStatus"]').val('@ViewBag.Status');
</script>
