@model MyProject.Data.BusinessSetting
@{
    ViewBag.Title = "Contact Us";
    var culture = System.Threading.Thread.CurrentThread.CurrentUICulture.Name.ToLowerInvariant();
    bool RTL = CultureHelper.IsRighToLeft();
}
<!--Give Styling Here-->
@section IndexStyles {
}
<!-- #region Content-->
<!-- BREADCRUMB AREA START -->
<div class="ltn__breadcrumb-area text-left bg-overlay-white-30 bg-image mt-5" data-bs-bg="/Assets/img/bg/14.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="ltn__breadcrumb-inner">
                    <h1 class="page-title">Contact Us</h1>
                    <div class="ltn__breadcrumb-list">
                        <ul>
                            <li><a href="~/home"><span class="ltn__secondary-color"><i class="fas fa-home"></i></span> Home</a></li>
                            <li>Contact Us</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- BREADCRUMB AREA END -->
<!-- CONTACT ADDRESS AREA START -->
<div class="ltn__contact-address-area mb-90">
    <div class="container">
        <div class="row web-contact-us-info">
            <div class="col-lg-4">
                <div class="ltn__contact-address-item ltn__contact-address-item-3 box-shadow">
                    <div class="ltn__contact-address-icon">
                        <img src="~/Assets/img/icons/10.png" alt="Icon Image">
                    </div>
                    <h3>Email Address</h3>
                    <p class="email-address">
                        @*info@webmail.com <br>
                            jobs@webexample.com*@
                    </p>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="ltn__contact-address-item ltn__contact-address-item-3 box-shadow">
                    <div class="ltn__contact-address-icon">
                        <img src="~/Assets/img/icons/11.png" alt="Icon Image">
                    </div>
                    <h3>Phone Number</h3>
                    <p class="phone-number">
                        @*+0123-456789 <br> +987-6543210*@
                    </p>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="ltn__contact-address-item ltn__contact-address-item-3 box-shadow">
                    <div class="ltn__contact-address-icon">
                        <img src="~/Assets/img/icons/12.png" alt="Icon Image">
                    </div>
                    <h3>Office Address</h3>
                    <p class="street-address">
                        @*18/A, New Born Town Hall <br>
                            New York, US*@
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- CONTACT ADDRESS AREA END -->
<!-- CONTACT MESSAGE AREA START -->
<div class="ltn__contact-message-area mb-120">
    @*mb--100*@
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="ltn__form-box contact-form-box box-shadow white-bg">
                    <h4 class="title-2">Get A Quote</h4>
                    <form class="" id="form_contact">
                        @Html.AntiForgeryToken()
                        <div class="row">
                            <div class="col-md-6 form-group">
                                <label for="FullName" hidden>Full Name</label>
                                <small class="form-text-validation py-1 font-normal text-danger"></small>
                                <div class="input-item input-item-name ltn__custom-icon">
                                    <input class="form-field" type="text" placeholder="Enter your name" name="FullName" data-strict="1" onkeypress="return isString(event)" maxlength="100" autocomplete="off">
                                </div>
                            </div>
                            <div class="col-md-6 form-group">
                                <label for="Email" hidden>Email Address</label>
                                <small class="form-text-validation py-1 font-normal text-danger"></small>
                                <div class="input-item input-item-email ltn__custom-icon">
                                    <input class="form-field" type="email" placeholder="Enter email address" name="Email" data-strict="1" maxlength="100" autocomplete="off">
                                </div>
                            </div>
                            <div class="col-md-6 form-group">
                                <label for="Subject" hidden>Subject</label>
                                <small class="form-text-validation py-1 font-normal text-danger"></small>
                                <div class="input-item">
                                    <select class="nice-select form-field" name="Subject" data-strict="1" autocomplete="off">
                                        <option value="">Select Subject Type</option>
                                        <option value="Property Management">Property Management</option>
                                        <option value="Mortgage Service">Mortgage Service</option>
                                        <option value="Consulting Service">Consulting Service</option>
                                        <option value="Home Buying">Home Buying</option>
                                        <option value="Home Selling">Home Selling</option>
                                        <option value="Escrow Services">Escrow Services</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6 form-group">
                                <input type="hidden" class="code" inputmode="numeric" name="PhoneCode" value="">

                                <label for="Contact" hidden>Phone Number</label>
                                <small class="form-text-validation py-1 font-normal text-danger"></small>
                                <div class="input-item input-item-phone ltn__custom-icon">
                                    <input class="intr-phone numpad input-field form-field Contact" inputmode="numeric" type="text" placeholder="Enter phone number" name="Contact" onkeypress="return isNumber(event)" maxlength="15" autocomplete="off" pattern="[0-9\-]*" data-strict="1">
                                </div>
                            </div>
                            <div class="col-md-12 form-group mt-4 md-mt-0">
                                <div class="input-item input-item-textarea ltn__custom-icon">
                                    <label for="Message" hidden>Message</label>
                                    <small class="form-text-validation py-1 font-normal text-danger "></small>
                                    <textarea class="form-field" placeholder="Enter message" name="Message" data-strict="1"></textarea>
                                </div>
                            </div>
                        </div>
                       
                        @*<p><label class="input-info-save mb-0"><input type="checkbox" name="agree"> Save my name, email, and website in this browser for the next time I comment.</label></p>*@
                        <div class="btn-wrapper mt-0">
                            <button class="btn theme-btn-1 btn-effect-1 text-uppercase" type="button" form="form_contact">Send Message</button>
                        </div>
                        <p class="form-messege mb-0 mt-20"></p>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- CONTACT MESSAGE AREA END -->
<!-- GOOGLE MAP AREA START -->
@if (!string.IsNullOrEmpty(Model.MapIframe) && Model.MapIframe != "-")
{
    <div class="google-map mb-120 h-100">
        @Html.Raw(Model.MapIframe)
        @*<iframe src="@Html.Raw(Model.MapIframe)" width="100%" height="100%" frameborder="0" allowfullscreen="" aria-hidden="false" tabindex="0"></iframe>*@
    </div>
}
<!-- GOOGLE MAP AREA END -->
<!-- #endregion Content-->
<!--Write js Here-->
@section IndexScript {
    <script src="@Url.ContentVersioned("~/Assets/js/web/contact-us/index.js")"></script>
}