@section IndexScript {
	@*<script src="@Url.ContentVersioned("~/Assets/js/web/introducton/index.js")"></script>*@
	<script>
		$('.owl-carousel').owlCarousel({
			rtl: direction == "ltr" ? false : true,
			loop: true,
			// navText:["<img src='/assets/images/web-icons/left-arrow.png'>","<img src='/assets/images/web-icons/right-arrow.png'>"],
			nav: false,
			margin: 16,
			dots: false,
			responsiveClass: true,
			responsive: {
				0: {
					items: 3,
				},
				600: {
					items: 6,
				},
				1000: {
					items: 6,
				}
			}
		})

		$('.owl-loaded .owl-item').click(function () {
			$('.owl-thumbnail').attr('src', $(this).find('img').attr('src'))
		});
	</script>
}
