<!-- #region Modal-->
<section class="font-Rubik w-full bg-black/50 fixed inset-0 modal fade flex flex-wrap top-0 left-0 justify-center items-center overflow-x-hidden overflow-y-auto h-auto z-[60] overflow-scroll-none popup-section"
		 id="booking_section">
	<!-- Main Modal -->
	<div class="max-w-screen-4xl 4xl:mx-auto w-full relative">
		<!-- Modal Content -->
		<div class="bg-white rounded-lg w-[80%] mx-auto m-10">
			<!-- Header Section -->
			<div class="modal-header flex justify-between items-center border-b bg-ak-light p-6 rounded-t-lg">
				<div class="heading">
					<h3 class="text-gray-900 font-semibold text-xl md:text-2xl 2xl:text-4xl">
						Service Booking
					</h3>
					<p class="text-ak-blue font-semibold text-xxs md:text-xs">Deep Cleaning</p>
				</div>
				<button type="button"
						class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm p-1.5 ml-auto inline-flex items-center dark:hover:bg-gray-600 dark:hover:text-white">
					<svg class="w-5 h-5" fill="text-gray-900" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
						<path fill-rule="evenodd"
							  d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z"
							  clip-rule="evenodd"></path>
					</svg>
				</button>
			</div>
			<!-- Header Section End -->
			<!-- Body Section -->
			<div class="modal-body p-4 md:py-2 px-6 md:px-2 space-y-6">
				<!-- form -->
				<form class="font-Rubik" action="" method="" enctype="" id="booking_form">
					<!-- anti-forgery token here -->

					<div class="flex flex-col md:flex-row flex-wrap divide-y-[1.8px] md:divide-y-0 md:divide-x-[1.8px] justify-between items-center">

						<div class="w-[100%] md:w-1/3 px-2 md:px-6 py-2 md:py-0 md:min-h-[18rem] flex items-center ">
							<div class="container w-full">
								<div class="bg-white border-[#707070] rounded-lg">
									<div class="form-group flex flex-col my-4">
										<!-- <label for="FirstName">First Name</label> -->
										<input type="text"
											   class="rounded-lg text-sm outline-none-input py-3 px-3 bg-white box-shadow-md"
											   id="FirstName" data-required placeholder="First Name">
										<small class="form-text-validation text-xss text-danger py-1" style="display: none;">
											First
											Name
											Required
										</small>
									</div>
									<div class="form-group flex flex-col my-4">
										<!-- <label for="LastName">Last Name</label> -->
										<input type="text"
											   class="rounded-lg text-sm outline-none-input py-3 px-3 bg-white box-shadow-md"
											   id="LastName" data-required placeholder="Last Name">
										<small class="form-text-validation text-xss text-danger py-1" style="display: none;">
											Last
											Name
											Required
										</small>
									</div>
									<div class="form-group flex flex-col my-4">
										<!-- <label for="Email">Email Address</label> -->
										<input type="text"
											   class="rounded-lg text-sm outline-none-input py-3 px-3 bg-white box-shadow-md"
											   id="Email" data-required placeholder="Email Address">
										<small class="form-text-validation text-xss text-danger py-1" style="display: none;">
											Email
											Address
											Required
										</small>
									</div>
									<div class="form-group flex flex-col my-4">
										<!-- <label for="PhoneNumber">Phone Number</label> -->
										<input type="text"
											   class="rounded-lg text-sm outline-none-input py-3 px-3 bg-white box-shadow-md"
											   id="PhoneNumber" data-required placeholder="Phone Number">
										<small class="form-text-validation text-xss text-danger py-1" style="display: none;">
											Phone
											Number
											Required
										</small>
									</div>
								</div>
							</div>
						</div>

						<div class="w-[100%] md:w-1/3 px-2 md:px-6 py-2 md:py-0 md:min-h-[18rem] flex items-center ">
							<div class="container w-full">
								<div class="bg-white border-[#707070] rounded-lg">
									<div class="form-group flex flex-col my-4">
										<!-- <label for="DateOfVisit">Date of Visit</label> -->
										<input type="text"
											   class="rounded-lg text-sm outline-none-input py-3 px-3 bg-white box-shadow-md border-0 foucs:border-b-0 focus-within:border-b-0 active:foucs:border-b-0 date-picker-1"
											   id="DateOfVisit" data-required placeholder="Date of Visit">
										<small class="form-text-validation text-xss text-danger py-1" style="display: none;">
											Date of
											Visit
											Required
										</small>
									</div>
									<div class="form-group flex flex-col my-4">
										<!-- <label for="TimeOfVisit">Time of Visit</label> -->
										<input type="text"
											   class="rounded-lg text-sm outline-none-input py-3 px-3 bg-white box-shadow-md border-0 foucs:border-b-0 focus-within:border-b-0 active:foucs:border-b-0 time-picker-1"
											   id="TimeOfVisit" data-required placeholder="Time of Visit">
										<small class="form-text-validation text-xss text-danger py-1" style="display: none;">
											Time of
											Visit
											Required
										</small>
									</div>
									<div class="form-group flex flex-col my-4">
										<!-- <label for="Issue">Issue Description</label> -->
										<div class="rounded-lg text-sm py-3 bg-white box-shadow-md">
											<textarea class="outline-none-input outline-none-input-focus-none resize-none px-3 mb-2 w-full" id="Issue_Message"
													  data-required placeholder="Tell us more about your issue" rows="3"></textarea>
											<div class="w-full bottom-2 left-0 flex flex-row-reverse flex-wrap gap-2 justify-start px-3 right issue-images-divtextarea">
												<div class="file-upload flex items-center justify-center text-center">
													<label for="Images"
														   class="fa fa-paperclip text-black text-xl p-[0.5rem] border-[1.5px] border-dashed border-black/50 rounded-lg text-stroke-white-1 cursor-pointer"
														   title="Upload Image"></label>
													<input type="file" class="file-upload-input hidden" name="Images" id="Images"
														   accept=".png, .jpg, .jpeg" multiple />
												</div>
											</div>
										</div>
										<small class="form-text-validation text-xss text-danger py-1" style="display: none;">
											Issue
											Description Required
										</small>
									</div>
								</div>
							</div>
						</div>

						<div class="w-[100%] md:w-1/3 px-2 md:px-6 py-2 md:py-0 md:min-h-[18rem] flex items-center ">
							<div class="container w-full">
								<div class="bg-white border-[#707070] rounded-lg">
									<div class="form-group flex flex-col my-4 relative">
										<!-- <label for="SearchLocation">Search Location</label> -->
										<input type="text"
											   class="rounded-lg text-sm outline-none-input py-3 px-3 bg-white box-shadow-md"
											   id="SearchLocation" data-required placeholder="Search Location">
										<small class="form-text-validation text-xss text-danger py-1" style="display: none;">
											Search
											Location
											Required
										</small>
										<div class="absolute top-[50%] translate-x-[-50%] translate-y-[-50%] right-0 mx-1 flex items-center">
											<a href="javascript:void(0);" class="fa fa-crosshairs text-black text-xl text-stroke-white-1 cursor-pointer"
											   title="Search Current Location"></a>
										</div>
									</div>
									<div class="form-group flex flex-col my-4">
										<!-- <label for="MapDiv">Map</label> -->
										<div class="rounded-lg text-sm h-[6.875rem] bg-white border border-[#ebebeb] box-shadow-md booking-map map" id="map">
										</div>
									</div>
								</div>
							</div>
						</div>

					</div>

				</form>
			</div>
			<!-- Body Section End -->
			<!-- Footer Section -->
			<div class="modal-footer flex items-center justify-end p-6 space-x-2 rounded-b border-t border-gray-200 dark:border-gray-600">
				<button class="btn-primary bg-white hover:bg-ak-light focus:outline-none border border-gray-300 ">
					<p class="p-btn-primary text-gray-700 hover:text-gray-900">Close</p>
				</button>
				<button class="btn-primary bg-ak-gold/90 hover:bg-ak-gold focus:outline-none " type="button"
						form="booking_form">
					<p class="p-btn-primary text-white">Submit</p>
				</button>
			</div>
			<!-- Footer Section End -->
		</div>
		<!-- Modal Content End -->
	</div>
	<!-- Main Modal End -->
</section>
<!-- #endregion Modal -->
