@model MyProject.Web.ViewModels.AboutViewModel
@{
    ViewBag.Title = "About Us";
    var culture = System.Threading.Thread.CurrentThread.CurrentUICulture.Name.ToLowerInvariant();
    //bool RTL = false;
}
<!--Give Styling Here-->
@section IndexStyles {

}
<!-- #region Content-->
<!-- BREADCRUMB AREA START -->
<div class="ltn__breadcrumb-area text-left bg-overlay-white-30 bg-image mt-5" data-bs-bg="/Assets/img/bg/14.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="ltn__breadcrumb-inner">
                    <h1 class="page-title">About Us</h1>
                    <div class="ltn__breadcrumb-list">
                        <ul>
                            <li><a href="~/home"><span class="ltn__secondary-color"><i class="fas fa-home"></i></span> Home</a></li>
                            <li>About Us</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- BREADCRUMB AREA END -->
<!-- ABOUT US AREA START -->
<div class="ltn__about-us-area pt-120--- pb-90 mt--30">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 align-self-center">
                <div class="about-us-img-wrap about-img-left">
                    <img src="~/Assets/img/others/13.png" alt="About Us Image">
                    <div class="about-us-img-info about-us-img-info-2 about-us-img-info-3">
                        @if (Model.AboutVideo != null)
                        {
                            <div class="ltn__video-img ltn__animation-pulse1">
                                <img src="@Url.Content(Model.AboutImage.Path)" alt="video popup bg image">
                                <a class="ltn__video-icon-2 ltn__video-icon-2-border---" href="@Url.Content(Model.AboutVideo.Path)" data-rel="lightcase:myCollection">
                                    <i class="fa fa-play"></i>
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <div class="col-lg-6 align-self-center">
                <div class="about-us-info-wrap">
                    <div class="section-title-area ltn__section-title-2--- mb-20">
                        <h6 class="section-subtitle section-subtitle-2 ltn__secondary-color">About Us</h6>
                        <h1 class="section-title">
                            The Leading Real Estate
                            Rental Marketplace<span>.</span>
                        </h1>
                        <p>
                            Over 560 people reach us from more than 10 cities all over the
                            Country, combined with specialist services.
                        </p>
                    </div>
                    <ul class="ltn__list-item-half clearfix">
                        <li>
                            <i class="flaticon-home-2"></i>
                            Smart Home Design
                        </li>
                        <li>
                            <i class="flaticon-mountain"></i>
                            Beautiful Scene Around
                        </li>
                        <li>
                            <i class="flaticon-heart"></i>
                            Exceptional Lifestyle
                        </li>
                        <li>
                            <i class="flaticon-secure"></i>
                            Complete 24/7 Security
                        </li>
                    </ul>
                    <div class="ltn__callout bg-overlay-theme-05  mt-30">
                        <p>
                            "Enimad minim veniam quis nostrud exercitation <br>
                            llamco laboris. Lorem ipsum dolor sit amet"
                        </p>
                    </div>
                    <div class="btn-wrapper animated">
                        <a href="~/projects" class="theme-btn-1 btn btn-effect-1">OUR PROJECTS</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- ABOUT US AREA END -->
<!-- FEATURE AREA START ( Feature - 6) -->
<div class="ltn__feature-area section-bg-1 pt-120 pb-90 mb-120---" hidden>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title-area ltn__section-title-2--- text-center">
                    <h6 class="section-subtitle section-subtitle-2 ltn__secondary-color">Our Services</h6>
                    <h1 class="section-title">Our Main Focus</h1>
                </div>
            </div>
        </div>
        <div class="row ltn__custom-gutter--- justify-content-center">
            <div class="col-lg-4 col-sm-6 col-12">
                <div class="ltn__feature-item ltn__feature-item-6 text-center bg-white  box-shadow-1">
                    <div class="ltn__feature-icon">
                        <!-- <span><i class="flaticon-house"></i></span> -->
                        <img src="~/Assets/img/icons/icon-img/21.png" alt="#">
                    </div>
                    <div class="ltn__feature-info">
                        <h3><a href="~/projects">Buy a home</a></h3>
                        <p>over 20+ homes for sale available on the website, we can match you with a house you will want to call home.</p>
                        <a class="ltn__service-btn" href="~/projects">Find A Home <i class="flaticon-right-arrow"></i></a>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-sm-6 col-12">
                <div class="ltn__feature-item ltn__feature-item-6 text-center bg-white  box-shadow-1 active">
                    <div class="ltn__feature-icon">
                        <!-- <span><i class="flaticon-house-3"></i></span> -->
                        <img src="~/Assets/img/icons/icon-img/22.png" alt="#">
                    </div>
                    <div class="ltn__feature-info">
                        <h3><a href="~/projects">Rent a home</a></h3>
                        <p>over 20+ homes for sale available on the website, we can match you with a house you will want to call home.</p>
                        <a class="ltn__service-btn" href="~/projects">Find A Home <i class="flaticon-right-arrow"></i></a>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-sm-6 col-12">
                <div class="ltn__feature-item ltn__feature-item-6 text-center bg-white  box-shadow-1">
                    <div class="ltn__feature-icon">
                        <!-- <span><i class="flaticon-deal-1"></i></span> -->
                        <img src="~/Assets/img/icons/icon-img/23.png" alt="#">
                    </div>
                    <div class="ltn__feature-info">
                        <h3><a href="~/projects">Sell a home</a></h3>
                        <p>over 20+ homes for sale available on the website, we can match you with a house you will want to call home.</p>
                        <a class="ltn__service-btn" href="~/projects">Find A Home <i class="flaticon-right-arrow"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- FEATURE AREA END -->
@if (Model.Teams.Count() > 0)
{
    <!-- TEAM AREA START (Team - 3) -->
    <div class="ltn__testimonial-area section-bg-1--- bg-image-top pt-115 pb-70" data-bs-bg="/Assets/img/bg/20.jpg">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-title-area ltn__section-title-2--- text-center">
                        <h6 class="section-subtitle section-subtitle-2 ltn__secondary-color">Team</h6>
                        <h1 class="section-title">Our Team Members</h1>
                    </div>
                </div>
            </div>
            <div class="row ltn__testimonial-slider-5-active slick-arrow-1">
                @foreach (var item in Model.Teams)
                {
                    <div class="col-lg-4">
                        <div class="ltn__team-item ltn__team-item-3---">
                            <div class="iti team-img">
                                <img src="@Url.Content(item.Image)" class="rounded" alt="@item.Name">
                            </div>
                            <div class="team-info">
                                <h4><a>@item.Name</a></h4>
                                <h6 class="ltn__secondary-color">@item.Designation</h6>
                                @if (!string.IsNullOrEmpty(item.Email))
                                {
                                    <h6 class="small"><a href="mailto:@item.Email">@item.Email</a></h6>
                                }
                                @if (!string.IsNullOrEmpty(item.Contact1))
                                {

                                    <h6 class="small">
                                        <a href="tel:@item.Contact1">+@item.Contact1</a>
                                        @if (!string.IsNullOrEmpty(item.Contact2))
                                        {
                                            @Html.Raw("|") <a href="tel:@item.Contact2"> +@item.Contact2</a>
                                        }
                                    </h6>
                                }
                                @*<div class="ltn__social-media">
                                        <ul>
                                            <li><a href="javascript:void(0);"><i class="fab fa-facebook-f"></i></a></li>
                                            <li><a href="javascript:void(0);"><i class="fab fa-twitter"></i></a></li>
                                            <li><a href="javascript:void(0);"><i class="fab fa-linkedin"></i></a></li>
                                        </ul>
                                    </div>*@
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    <!-- TEAM AREA END -->
}
