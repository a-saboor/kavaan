@model MyProject.Data.UnitBooking
@{
	ViewBag.Title = "";//ThankYou_;
	var culture = System.Threading.Thread.CurrentThread.CurrentUICulture.Name.ToLowerInvariant();
	bool RTL = CultureHelper.IsRighToLeft();
	Layout = null;

	var booking = ViewData["Booking"] != null ? ViewData["Booking"] as MyProject.Data.ServiceBooking : null;

}
<!--Give Styling Here-->
@section IndexStyles {
}
<!-- #region Modal-->
<section class="font-Rubik w-full bg-black/50 fixed inset-0 modal fade flex flex-wrap top-0 left-0 justify-center items-center overflow-x-hidden overflow-y-auto h-auto z-[60] overflow-scroll-none popup-section"
		 id="success_section" style="display:none;">
	<!-- Main Modal -->
	<div class="max-w-screen-4xl 4xl:mx-auto w-full relative">
		<!-- Modal Content -->
		<div class="bg-white rounded-lg w-[80%] sm:w-[60%] md:w-[50%] lg:w-[35%] mx-auto m-10">
			<!-- Header Section -->
			<div class="modal-header flex justify-between items-center border-b bg-ak-light px-4 py-2 rounded-t-lg">
				<button type="button"
						class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm p-1.5 ml-auto inline-flex items-center dark:hover:bg-gray-600 dark:hover:text-white close-modal">
					<svg class="w-5 h-5" fill="text-gray-900" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
						<path fill-rule="evenodd"
							  d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z"
							  clip-rule="evenodd"></path>
					</svg>
				</button>
			</div>
			<!-- Header Section End -->
			<!-- Body Section -->
			<div class="modal-body p-4 md:py-2 px-6 md:px-2 space-y-6">

				<div class="flex flex-col md:flex-row flex-wrap divide-y-[1.8px] md:divide-y-0 md:divide-x-[1.8px] justify-between items-center">

					<div class="w-[100%] px-2 md:px-6 py-2 md:py-0 md:min-h-[18rem] mx-auto flex items-center ">
						<div class="container w-full">
							<div class="bg-white border-[#707070] rounded-lg">
								<div class="form-group flex flex-col my-4 text-center justify-center">
									<img src="/assets/images/bg/confirmation-img.png" alt="success"
										 class="w-[80%] mx-auto xl:w-[60%] object-contain my-2">

									@if (booking != null)
									{
										<h5 class="font-normal my-2 text-black text-md">
											Your booking has been confirmed with Booking No: <span class="text-ak-gold">@booking.BookingNo</span>
										</h5>
									}
									else
									{
										<h5 class="font-normal my-2 text-black text-md">
											<span class="text-ak-gold">Thank you</span> for using our services.
										</h5>
									}

								</div>
							</div>
						</div>
					</div>

				</div>

			</div>
			<!-- Body Section End -->
			<!-- Footer Section -->
			<div class="modal-footer flex flex-row flex-wrap items-center justify-center px-4 pt-4 pb-2 space-x-2 rounded-b border-t border-gray-200 dark:border-gray-600">
				<a href="/@culture/home" class="btn-primary bg-white hover:bg-ak-light focus:outline-none border border-gray-300 m-2">
					<p class="p-btn-primary text-gray-700 hover:text-gray-900">Back To Home</p>
				</a>
				<a href="@ViewBag.URL" class="btn-primary bg-ak-gold/90 hover:bg-ak-gold focus:outline-none m-2 @(ViewBag.URL == "javascript:void(0);" ? "close-modal" : "")">
					<p class="p-btn-primary text-white">@ViewBag.Text</p>
				</a>
			</div>
			<!-- Footer Section End -->
		</div>
		<!-- Modal Content End -->
	</div>
	<!-- Main Modal End -->
</section>
<!-- #endregion Modal -->
<!--Write js Here-->
<script>
	$(document).ready(function () {
		initAllFunc();
	});
</script>
