@{
	ViewBag.Title = "";//COMING_SOON;
	var culture = System.Threading.Thread.CurrentThread.CurrentUICulture.Name.ToLowerInvariant();
	bool RTL = CultureHelper.IsRighToLeft();
}
<!--Give Styling Here-->
@section IndexStyles {
	<style>
		.bg-body {
			font-family: 'Rubik', sans-serif !important;
			background-image: url('/assets/images/coming-soon/1.jpg');
			background-size: cover;
			background-repeat: no-repeat;
			height: 100vh;
			/*background-position-y: 75%;*/
			background-position: center;
			background-color: black;
			backdrop-filter: blur(3px);
			transition: background-image 2.5s ease;
		}

		.coming-soon {
			color: #575757 !important;
			font-size: 26px;
			font-weight: 600;
			letter-spacing: 2px;
		}

		@@media (min-width: 1200px) {
			img.img1 {
				width: 7% !important;
				/*margin-top: 6%;*/
				/*margin-bottom: 15px;*/
			}

			img.img2 {
				width: 18% !important;
				/*margin: 15px 0 !important;*/
			}

			img.img3 {
				width: 25% !important;
			}
		}

		@@media (max-width: 1199px) {

			.img1 {
				width: 12% !important;
				/*margin-top: 0px;*/
			}

			.img2 {
				width: 30% !important;
				/*margin-top: 25px !important;*/
			}
		}

		@@media (max-width: 768px) {
			.img1 {
				width: 15% !important;
				/*margin-top: 15px;*/
			}

			.img2 {
				width: 45% !important;
				/*margin-top: 50px !important;*/
			}
		}


		@@media (max-width: 500px) {
			.img1 {
				width: 35% !important;
				/*margin-top: 5%;*/
			}

			.img2 {
				width: 80% !important;
				/*margin-top: 50px !important;*/
			}
		}

		.body-wrapper {
			background: #000000a6;
			background-size: cover;
			background-repeat: no-repeat;
			height: 100vh;
			display: flex;
			flex-direction: column;
			/*background-position-y: 75%;*/
		}

			.body-wrapper img {
				filter: drop-shadow(1px 2px 4px black);
			}

		.heading {
			font-family: 'Rubik', sans-serif !important;
			font-size: 2.5em;
			font-weight: 700;
			text-shadow: 0px 2px 3px black;
			color: #cca060;
			/*margin: 40px 0;*/
			text-transform: uppercase;
		}

		/* Extra small devices (phones, 600px and down) */
		@@media only screen and (max-width: 600px) {

			.main-bg {
				display: flex;
				flex-direction: column;
				justify-content: center;
				align-items: center;
			}
		}

		/* Large devices (laptops/desktops, 992px and up) */
		@@media only screen and (min-width: 992px) {


			a heading {
				font-size: 16px;
			}

			.heading {
				font-family: sans-serif;
				font-size: 3.5em;
				font-weight: 800;
				text-shadow: 0px 2px 3px black;
				color: #cca060;
				/*margin: 20px 10px;*/
				text-transform: uppercase;
			}
		}
		/* Extra large devices (large laptops and desktops, 1200px and up) */
		@@media only screen and (min-width: 1200px) {
		}

		.d-flex-div {
			display: flex;
			flex-direction: column;
			gap: 2.5rem;
			margin: auto;
			margin-bottom: 20%;
			width: 100%;
		}
	</style>
}
<!-- #region Content-->
<section class="bg-body">
	<div class="body-wrapper">
		<div class="d-flex flex-column justify-content-center align-items-center vh-100 gap-5 d-flex-div">
			<img src="~/Assets/images/logo/orofacilities-logo-white.png" alt="" class="img-fluid w-100 img2">
			<heading class="heading">Coming Soon</heading>
		</div>
	</div>
</section>
<!-- #endregion Content-->
<!--Write js Here-->
@section IndexScript {
	<script>
		let i = 1;
		changeBgImage();
		setInterval(function () { changeBgImage(); }, 5000);
		function changeBgImage() {
			const img_url = "'/assets/images/coming-soon/" + i + ".jpg'";
			$('.bg-body').css("background-image", "url(" + img_url + ")");
			i++;
			i = i == 5 ? 1 : i;
		}
	</script>
}